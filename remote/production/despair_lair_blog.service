[Unit]
Description=Jekyll-powered blog service

After=network-online.target
Wants=network-online.target

StartLimitIntervalSec=600
StartLimitBurst=5

[Service]
Type=exec
User=pruebitas
Group=pruebitas
EnvironmentFile=/etc/environment
WorkingDirectory=~/Code/despair_lair_blog
ExecStart=~/.local/share/rubies/ruby-3.3.6/bin/bundle exec jekyll serve

Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target
